{
  "manifest_version": 2,
  "name": "YouTube Ambilight",
  "description": "This Chrome Extension adds ambilight to YouTube videos",
  "version": "2.22",
  "author": "Wessel Kroos",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon-19.png",
    "default_popup": "options.html"
  },
  "background" : {
    "scripts" : ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://www.youtube.com/*"],
    "js": ["contentscript.js"],
    "css": ["styles/main.css"]
  }],
  "web_accessible_resources": [
    "styles/main.css",
    "scripts/youtube-ambilight.js",
    "scripts/youtube-hide-teasers.js"
  ],
  "permissions": [
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  }
}